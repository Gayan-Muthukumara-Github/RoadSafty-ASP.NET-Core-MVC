<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Core_3._1</title>

    <!-- Bootstrap 5.1 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <!-- Google fonts-->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Audiowide">

    <!-- font-awsome Icon-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.1/css/all.min.css">

    <!-- Google Font -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display&display=swap" rel="stylesheet">

    <!-- Css Link -->
    <link rel="stylesheet" href="~/css/nav.css">
    <link rel="stylesheet" href="~/css/login.css">
    <link rel="stylesheet" href="~/css/signup.css">



    <style>
        .bg-dark {
            background-color: #1a1a1a !important;
        }

        .signup {
            background-color: #32bc87;
        }

            .signup:hover {
                background-color: #2ba174;
                color: white !important;
            }

        .section1 {
            margin-top: 40px;
            margin-bottom: 40px;
            width: 72% !important;
            background-color: #ccc;
        }

        .divider:after,
        .divider:before {
            content: "";
            flex: 1;
            height: 1px;
            background: #eee;
        }

        .FormHeading h1 {
            font-size: 40px;
            font-weight: bold;
            font-family: 'Poppins', sans-serif;
            padding-top: 25px;
            color: black;
        }

        .btn {
            background-color: #32bc87;
            color: white;
            font-weight: bold;
            font-size: 20px;
            padding-right: 40px;
            padding-left: 40px;
        }

            .btn:hover {
                border: 2px solid #32bc87;
                background-color: transparent;
                color: #2ba174;
            }

        .btnDiv {
            padding-top: 50px;
        }

        h5 {
            font-size: 13px;
        }

        input,
        input::-webkit-input-placeholder {
            font-size: 12px;
            line-height: 3;
        }
    </style>
</head>
<body>

    <header>
        
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark navText">
            <div class="container">

                <!-- Site log -->
                <a class="navbar-brand" href="#">
                    <img src="~/Images/logo.png" alt="" width="30" height="24">
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup"
                        aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                @if (User.Identity.IsAuthenticated)
                {
                    <div class="collapse navbar-collapse justify-content-center " id="navbarNavAltMarkup">

                        <div class="navbar-nav">
                            <a class="nav-link active htext" aria-current="page" asp-area="" asp-controller="Home" asp-action="Index">HOME</a>
                            <a class="nav-link htext" href="#">ABOUT US</a>
                            <a class="nav-link htext" href="#">CONTACT</a>

                            <li class="nav-item dropdown ">
                                <a class="nav-link dropdown-toggle htext" href="#" id="navbarDropdownMenuLink" role="button"
                                   data-bs-toggle="dropdown" aria-expanded="false">
                                    SERVICES
                                </a>
                                <ul class="dropdown-menu htext" aria-labelledby="navbarDropdownMenuLink">
                                    <li><a class="dropdown-item" href="#">Register</a></li>
                                    <li><a class="dropdown-item" href="#">Accidents</a></li>
                                </ul>
                            </li>
                        </div>

                    </div>

                    <a class="nav-link htext signup rounded-pill" asp-area="" asp-controller="Account" asp-action="Logout">Logout</a>
                }
                else
                {
                    <div class="collapse navbar-collapse justify-content-center " id="navbarNavAltMarkup">

                        <div class="navbar-nav">
                            <a class="nav-link active htext" aria-current="page" asp-area="" asp-controller="Home" asp-action="Index">HOME</a>
                            <a class="nav-link htext" href="#">ABOUT US</a>
                            <a class="nav-link htext" href="#">CONTACT</a>

                            <li class="nav-item dropdown ">
                                <a class="nav-link dropdown-toggle htext" href="#" id="navbarDropdownMenuLink" role="button"
                                   data-bs-toggle="dropdown" aria-expanded="false">
                                    SERVICES
                                </a>
                                <ul class="dropdown-menu htext" aria-labelledby="navbarDropdownMenuLink">
                                    <li><a class="dropdown-item" href="#">Register</a></li>
                                    <li><a class="dropdown-item" href="#">Accidents</a></li>
                                </ul>
                            </li>
                        </div>

                    </div>

                    <a class="nav-link htext signup rounded-pill" asp-area="" asp-controller="Account" asp-action="Login">Login</a>

                    <a class="nav-link htext signup rounded-pill" asp-area="" asp-controller="Account" asp-action="Register">Sign Up</a>
                }
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
