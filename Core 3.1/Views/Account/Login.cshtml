@model SLE_System.Models.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<section class="section1 rounded container">
    <div class="FormHeading text-center">
        <h1> Welcome</h1>
    </div>

    <section class="vh-70">
        <div class="container py-5 h-100">
            <div class="row d-flex align-items-center justify-content-center h-100">
                <div class="col-md-8 col-lg-7 col-xl-6">
                    <img src="~/Images/undraw_mobile_login_re_9ntv.svg" class="img-fluid" alt="Phone image">
                </div>


                <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">
                    <form asp-action="Login">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <!-- Email input -->
                        <div class="form-outline mb-4">
                            <label asp-for="Email"></label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <!-- Password input -->
                        <div class="form-outline mb-4">
                            <label asp-for="Password"></label>
                            <input asp-for="Password" class="form-control" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="form-outline mb-4">
                            <div class="custom-control custom-checkbox">
                                <input asp-for="RememberMe" type="checkbox" class="custom-control-input">
                                <label class="custom-control-label" asp-for="RememberMe">@Html.DisplayNameFor(m => m.RememberMe)</label>
                            </div>
                        </div>
                        <!-- Button -->
                        <div class="btnDiv d-grid gap-2 col-6 mx-auto">
                            <button type="submit" class="btn-primary" style="border: 2px solid #32bc87; background-color: transparent; color: #2ba174;">Login</button>
                            <hr>

                        </div>

                        <h5 class="text-center ">Don't have an account <a asp-area="" asp-controller="Account" asp-action="Register">register</a> here</h5>




                    </form>
                </div>
            </div>
        </div>
    </section>
    </div>
</section>